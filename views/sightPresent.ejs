<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>基隆市景點介紹</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/all.css">
    <style>
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .card {
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">基隆市景點介紹</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% sights.forEach(function(sight, index) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= sight.photoURL %>" class="card-img-top" alt="<%= sight.sightName %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= sight.sightName %></h5>
                            <p class="card-text">
                                <strong>區域:</strong> <%= sight.zone %><br>
                                <strong>類別:</strong> <%= sight.category %><br>
                                <strong>地址:</strong> <%= sight.address %>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDescription<%= index %>" aria-expanded="false" aria-controls="collapseDescription<%= index %>">
                                詳細資訊
                            </button>
                            <a href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(sight.address) %>" class="btn btn-outline-secondary" target="_blank">
                                查看地圖
                            </a>
                        </div>
                        <div class="collapse" id="collapseDescription<%= index %>">
                            <div class="card-body border-top">
                                <p><%= sight.description %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <a href="/index" class="btn btn-primary" role="button">回首頁</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>